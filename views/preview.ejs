<link rel="stylesheet" href="/css/preview.css">

<div id = "container">
    
    <div id = "form-div">
        <div id = "user-info">
            <img style="height: 100%; width: 10%;" alt="dp">
            <span><b style="font-size: larger;"><%= locals.user.name%></b></span>
        </div>
        <form id = "form-for-post"  method="post" action="/posts/create-post">
            <input type="text" name = "caption" placeholder="What's on your mind ? " style="width:100%; height: 30%;" >
            <input type = "file" name = "dp" placeholder="Add Any Photo/video" style="width: 100%; height: 50%;">
            <input type="submit">
        </form>

    </div>  
    
    <div class = "user-post">
        <div class = "post-info">
            <div style="height: 60%; width: 20%;"><img style="height: inherit; width:inherit;" alt="dp"></div>
            <div style="height:50%; width: 80%;">kdidnfd</div>
            <div style="height: 50%; width: 50%;">jksjdflks</div>
        </div>
        <div class = "post-img">
            <img style="height: inherit; width: inherit;">
        </div>
        
        <div class = "post-like">
            <div class="post-react"> <a><h4><i class="fa-solid fa-thumbs-up"></i> &nbsp; like</h4></a> </div>
            <div class = "post-react"> 
                <a href="#comment-from-unique" style="text-decoration: none; color: black;">
                    <h4> <i class="fa-regular fa-comment"></i> &nbsp; comment </h4>
                </a> 
            </div>
        </div>

        <div class="post-comment">
            
        </div>

        <div class = "comment-form-div" id = "comment-from-unique" >
            <img style="height: 50%; width: 10%;">
            <form class="row g-3 comment-form" >
                
                <div class="col-auto">
                  <label for="inputPassword2" class="visually-hidden">Password</label>
                  <input type="text" class="form-control"  placeholder="Write a comment...">
                </div>
                <div class="col-auto">
                  <button type="submit" class="btn btn-primary mb-3" >
                    <img src="https://cdn-icons-png.flaticon.com/512/3682/3682321.png" height="30px" width="25px">
                  </button>
                </div>

            </form>
        </div>
    </div>

</div>